<div class="container login-form" style="border-radius: 10px; overflow: hidden;">
  <div class="row">
    <div class="col-4" style="padding: 0;">
      <div class="theme">
        <h1 class="title">Now,<br>Start your journey.</h1>
        <p class="para">A journey of a thousand miles must begin with a single step.<br>â€“ Laozi, Philosopher</p>
        <div class="image"></div>
        <div class="footer">
          <div class="copyright"><span>Copyright@2022 by Amy Ke</span></div>
        </div>
      </div>
    </div>
    <div class="col-8 bg-white" style="padding: 0;">
      <div class="form__info">
        <div class="form-container login-page">
          <h1 class="title">Log in</h1>
          {{>message}}
          <form action="/users/login" method="POST">
            <!-- Info -->
            <div class="user__info" style="position: relative;">
              <label for="email">E-mail</label>
              <input id="email" type="email" name="email" placeholder="Enter Email">
              <label for="password">Password</label>
              <input id="password" type="password" name="password" placeholder="Enter Password">
            </div>
            <!-- Btn -->
            <div class="form-btn-group">
              <button type="submit" class="form-btn form-btn-primary btn-block">Login</button>
              <a href="/auth/facebook" class="form-btn form-btn-secondary login-fb">
                <i class="fa-brands fa-facebook"></i></i>Sign up with Facebook
              </a>
            </div>
          </form>
          <!-- Sign up -->
          <div class="login__group">
            <span class="forgot">Need an account?<a href="/users/register" class="login">Sign up</a></span>
          </div>  
        </div>
      </div>
    </div>
  </div>
</div>