<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        吃吃食記
      </a>
      <a class="btn btn-primary" href="/restaurants" role="button">Create</a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form id="search-form" action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control search-input" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="col-sm-4">
          <a href="/restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2 me-1"></i>{{this.category}}
                </div>
                <span class="badge rounded-pill text-bg-danger">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="px-3 pb-2 text-end">
                <a href="/restaurants/{{ this._id }}/edit" class="pe-3 icon"><i
                    class="fa-solid fa-pencil text-secondary"></i></a>
                <a href="/restaurants/{{ this._id }}" class="pe-3 icon"><i
                    class="fa-solid fa-file-lines text-secondary"></i></a>
                <button type="button" class="btn bg-transparent" data-bs-toggle="modal" style="border: 0; padding: 0;" data-bs-target="#a{{ this._id }}">
                  <i class="fa-solid fa-trash-can text-secondary text-end"></i>
                </button>
              </div>
              <!-- Modal -->
              <div class="modal fade" id="a{{ this._id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">刪除食記</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      您確定要刪除{{this.name}}嗎?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                      <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-primary">確定</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
